{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
	  "enabled": false
	},
	"linter": {
	  "enabled": false,
	  "rules": {
		"recommended": true
	  }
	},
	"formatter": {
	  "enabled": true,
	  "formatWithErrors": false,
	  "indentStyle": "space",
	  "indentWidth": 2,
	  "lineWidth": 120,
	  "ignore": [
		"node_modules/",
		"build",
		"public/",
		".next/",
		"biome.json"
	  ]
	},
	"javascript": {
	  "formatter": {
		"quoteProperties": "asNeeded",
		"quoteStyle": "single",
		"jsxQuoteStyle": "single",
		"semicolons": "always",
		"trailingComma": "es5"
	  }
	}
  }